{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "public/worker.js"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "target": "ES2022",
    "ignoreDeprecations": "5.0" // TODO: switch to the other fix
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}